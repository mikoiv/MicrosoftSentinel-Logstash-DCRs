{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "dataCollectionRuleName": {
        "type": "String",
        "metadata": {
          "description": "Specifies the name of the Data Collection Rule to create."
        }
      },
      "location": {
        "type": "String",
        "metadata": {
          "description": "Specifies the location in which to create the Data Collection Rule."
        }
      },
      "workspaceResourceId": {
        "type": "String",
        "metadata": {
          "description": "Specifies the Azure resource ID of the Log Analytics workspace to use."
        }
      },
      "endpointResourceId": {
        "type": "String",
        "metadata": {
          "description": "Specifies the Azure resource ID of the Data Collection Endpoint to use."
        }
      }
    },
    "resources": [
      {
        "type": "Microsoft.Insights/dataCollectionRules",
        "apiVersion": "2021-09-01-preview",
        "name": "[parameters('dataCollectionRuleName')]",
        "location": "[parameters('location')]",
        "properties": {
          "dataCollectionEndpointId": "[parameters('endpointResourceId')]",
          "streamDeclarations": {
            "Custom-CommonSecurityLogStream": {
                "columns": [
                    {
                      "name": "FTNTFGTpolicyid",
                      "type": "datetime"
                    },
                    {
                      "name": "name",
                      "type": "string"
                    },
                    {
                      "name": "host",
                      "type": "string"
                    },
                    {
                      "name": "syslog",
                      "type": "string"
                    },
                    {
                      "name": "FTNTFGTlogid",
                      "type": "string"
                    },
                    {
                      "name": "deviceEventCategory",
                      "type": "string"
                    },
                    {
                      "name": "deviceProduct",
                      "type": "string"
                    },
                    {
                      "name": "FTNTFGTtz",
                      "type": "string"
                    },
                    {
                      "name": "FTNTFGTduration",
                      "type": "string"
                    },
                    {
                      "name": "FTNTFGTdstintfrole",
                      "type": "string"
                    },
                    {
                      "name": "transportProtocol",
                      "type": "string"
                    },
                    {
                      "name": "FTNTFGTapp",
                      "type": "string"
                    },
                    {
                      "name": "sourcePort",
                      "type": "string"
                    },
                    {
                      "name": "FTNTFGTvd",
                      "type": "string"
                    },
                    {
                      "name": "deviceOutboundInterface",
                      "type": "string"
                    },
                    {
                      "name": "FTNTFGTaction",
                      "type": "string"
                    },
                    {
                      "name": "externalId",
                      "type": "string"
                    },
                    {
                      "name": "bytesIn",
                      "type": "string"
                    },
                    {
                      "name": "FTNTFGTdstcountry",
                      "type": "string"
                    },
                    {
                      "name": "FTNTFGTsrccountry",
                      "type": "string"
                    },
                    {
                      "name": "severity",
                      "type": "string"
                    },
                    {
                      "name": "destinationAddress",
                      "type": "string"
                    },
                    {
                      "name": "FTNTFGTeventtime",
                      "type": "string"
                    },
                    {
                      "name": "applicationProtocol",
                      "type": "string"
                    },
                    {
                      "name": "FTNTFGTrcvdpkt",
                      "type": "string"
                    },
                    {
                      "name": "deviceVersion",
                      "type": "string"
                    },
                    {
                      "name": "FTNTFGTsentpkt",
                      "type": "string"
                    },
                    {
                      "name": "sourceAddress",
                      "type": "string"
                    },
                    {
                      "name": "FTNTFGTappcat",
                      "type": "string"
                    },
                    {
                      "name": "FTNTFGTsubtype",
                      "type": "string"
                    },
                    {
                      "name": "deviceEventClassId",
                      "type": "string"
                    },
                    {
                      "name": "deviceInboundInterface",
                      "type": "string"
                    },
                    {
                      "name": "type",
                      "type": "string"
                    },
                    {
                      "name": "deviceVendor",
                      "type": "string"
                    },
                    {
                      "name": "FTNTFGTtrandisp",
                      "type": "string"
                    },
                    {
                      "name": "FTNTFGTlevel",
                      "type": "string"
                    },
                    {
                        "name": "bytesOut",
                        "type": "string"
                    },
                    {
                        "name": "FTNTFGTsrcintfrole",
                        "type": "string"
                    },
                    {
                      "name": "destinationPort",
                      "type": "string"
                    },
                    {
                      "name": "deviceExternalId",
                      "type": "string"
                    },
                    {
                      "name": "cefVersion",
                      "type": "string"
                    },
                    {
                      "name": "ls_timestamp",
                      "type": "datetime"
                    },                    
                    {
                      "name": "ls_version",
                      "type": "string"
                    }
            ]
            }
          },
          "destinations": {
            "logAnalytics": [
              {
                "workspaceResourceId": "[parameters('workspaceResourceId')]",
                "name": "clv2ws1"
              }
            ]
          },
          "dataFlows": [
            {
              "streams": [
                "Custom-CommonSecurityLogStream"
              ],
              "destinations": [
                "clv2ws1"
              ],
              "transformKql": "source | extend TimeGenerated = ls_timestamp, DeviceAction = tostring(FTNTFGTaction), DeviceProduct = tostring(deviceProduct), ApplicationProtocol = tostring(FTNTFGTapp), SourceIP = tostring(sourceAddress), DestinationIP = tostring(destinationAddress), SentBytes = tolong(bytesOut), ReceivedBytes = tolong(bytesIn), SourcePort = toint(sourcePort), DestinationPort = toint(destinationPort)",
              "outputStream": "Microsoft-CommonSecurityLog"
            }
          ]
        }
      }
    ],
    "outputs": {
      "dataCollectionRuleId": {
        "type": "String",
        "value": "[resourceId('Microsoft.Insights/dataCollectionRules', parameters('dataCollectionRuleName'))]"
      }
    }
  }
